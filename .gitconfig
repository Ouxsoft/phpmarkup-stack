# prevent pushing to master
[branch "master"]
  pushRemote = no_push

# add commit template
[commit]
  template = .gitmessage.txt

# set colors
[color]
  ui = true

[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green

[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold

[color "status"]
  added = yellow
  changed = green
  untracked = red
